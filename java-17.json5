{
  // Configuration for repos using Java 17
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      "matchDatasources": [
        "docker",
        "java-version"
      ],
      "matchPackageNames": [
        "eclipse-temurin",
        "amazoncorretto",
        "adoptopenjdk",
        "openjdk",
        "java",
        "java-jre",
        "sapmachine",
        "/^azul/zulu-openjdk/",
        "/^bellsoft/liberica-openj(dk|re)-/",
        "/^cimg/openjdk/"
      ],
      allowedVersions: "<=17"
    },
  ],
}
