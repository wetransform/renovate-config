{
  // Default configuration for self-hosted Renovate
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "github>wetransform/renovate-config:default.json5",
  ],
  // https://docs.renovatebot.com/configuration-options/#prbodytemplate
  prBodyTemplate: "{{{table}}}{{{warnings}}}{{{notes}}}{{{changelogs}}}",
  rebaseWhen: "conflicted", // avoid too many PR builds for renovate changes; Note: may cause problems with automerge
}
